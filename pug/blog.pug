extends _pug-includes/layout.pug

block vars
    - var active = 'blog'  
    - var navbarClass = 'bg-transparent border-0 shadow-0 navbar-light px-lg-5 '  
    - var headerClass = 'header header-absolute'       
    - var parallax = true

block content
    
    - var breadcrumbs = []
    - breadcrumbs.push({name: 'Home', link: 'index.html'})
    - breadcrumbs.push({name: 'Blog'})
    - var heroHeading = 'Blog'
    - var heroText = '<p class="lead">As am hastily invited settled at limited civilly fortune me. Really spring in extent an by. Judge but built party world. Of so am he remember although required. Bachelor unpacked be advanced at. Confined in declared marianne is vicinity.</p>'
    - var heroImage = path + 'img/photo/blog-2.jpg'

    include _pug-includes/inc-hero.pug

    include _pug-includes/inc-var-blogitems.pug

    section.py-6
        .container.overflow-hidden
            .row.mx-lg-n5
                each val, index in posts
                    - delay = (index % 3) * 200

                    +blog(val, 'col-lg-4 col-sm-6 mb-5 px-lg-5', true, delay)

                
            // Pagination 
            nav(aria-label='Blog pagination')
                ul.pagination.justify-content-between.mb-5
                    li.page-item
                        a.page-link(href='#') 
                            i.fa.fa-chevron-left.mr-1
                            | Older posts
                    
                    li.page-item.disabled
                        a.page-link(href='#', tabindex='-1') Newer posts  
                            i.fa.fa-chevron-right.ml-1                 