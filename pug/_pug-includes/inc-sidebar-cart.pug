// Sidebar Cart Modal
#sidebarCart.modal.fade.modal-right(tabindex='-1', role='dialog')
    .modal-dialog(role='document')
        .modal-content.sidebar-cart-content
            .modal-header.border-0
                button.close.modal-close.close-rotate(type='button', data-dismiss='modal', aria-label='Close')
                    +svgIcon('close-1', 'w-3rem h-3rem svg-icon-light align-middle')
            .modal-body.px-5.sidebar-cart-body
                
                // Empty cart snippet
                // In case of empty cart - display this snippet + remove .d-none
                .d-none.text-center.mb-5
                    +svgIcon('retail-bag-1', 'w-3rem h-3rem svg-icon-light mb-4 text-muted')
                    p Your cart is empty 
                // Empty cart snippet end

                include inc-var-basketitems.pug
                .sidebar-cart-product-wrapper.custom-scrollbar
                    each val, index in basketProducts
                        +sidebarCartProduct(val)
                    each val, index in basketProducts
                        +sidebarCartProduct(val)
            .modal-footer.sidebar-cart-footer.shadow
                .w-100
                    h5.mb-4 Subtotal: <span class="float-right">$465.32</span>
                    a.btn.btn-outline-dark.btn-block.mb-3(href=path + "cart.html") View cart
                    a.btn.btn-dark.btn-block(href=path + "checkout.html") Checkout




               

        