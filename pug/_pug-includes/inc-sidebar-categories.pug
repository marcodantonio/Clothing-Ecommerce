include inc-var-categoryicons.pug

#categoriesMenu.expand-lg.collapse(role='menu')

    h5.sidebar-heading.d-none.d-lg-block Category  

    .sidebar-icon-menu.mt-4.mt-lg-0 
        each val,index in categoryIcons
            - expanded = false
            if (val.activeClass == 'active')
                - expanded = true
            if (!noOfCategories || noOfCategories > index)
                .sidebar-icon-menu-item(data-toggle="collapse", data-target=`#subcategories_${index}`, aria-expanded=expanded, aria-controls=`subcategories_${index}`, class=val.activeClass, role='menuitem') 
                    .d-flex.align-items-center
                        +svgIcon(val.icon, 'sidebar-icon')
                        a.sidebar-icon-menu-link.font-weight-bold.mr-2(href="#") #{val.name}
                        span.sidebar-icon-menu-count  #{val.count}
                    .collapse(id=`subcategories_${index}`, class=val.showClass)
                        ul.sidebar-icon-menu.sidebar-icon-submenu
                            each child in val.children
                                li.sidebar-icon-submenu-item
                                    a.sidebar-icon-submenu-link.link-animated.link-animated-light(href="#") #{child}   