// Grid 
div(class="products-grid #{gridClass}")
    include inc-grid-header.pug
            
    include inc-var-shopitems.pug

    .row
        each val in shopItems
            +product(val, itemClass, true, doNotDisplayView)

    nav.d-flex.justify-content-center.mb-5.mt-3(aria-label="page navigation")
        ul.pagination
            li.page-item
                a.page-link(href='#', aria-label='Previous')
                    span(aria-hidden='true') Prev
                    span.sr-only Previous
            li.page-item.active
                a.page-link(href="#") 1       
            li.page-item
                a.page-link(href="#") 2       
            li.page-item
                a.page-link(href="#") 3       
            li.page-item
                a.page-link(href="#") 4       
            li.page-item
                a.page-link(href="#") 5 
            li.page-item
                a.page-link(href='#', aria-label='Next')
                    span(aria-hidden='true') Next
                    span.sr-only Next     

// / Grid End