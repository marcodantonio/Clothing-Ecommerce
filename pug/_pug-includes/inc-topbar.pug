// Top Bar
.top-bar.text-sm(class=topbarClass)
    .container-fluid.px-lg-5.py-3
        .row.align-items-center
            .col-md-4.d-none.d-md-block
                ul.list-inline.mb-0
                    li.list-inline-item.mr-2
                        a.text-reset.text-hover-primary(href="#")
                            i.fab.fa-facebook-f 
                    li.list-inline-item.mr-4
                        a.text-reset.text-hover-primary(href="#")
                            i.fab.fa-twitter 
                    li.list-inline-item.mr-2
                        +svgIcon('calls-1', 'mr-2')
                        | 020-800-456-747
                    
            
            .col-sm-6.col-md-4.text-left.text-md-center
                p.mb-0 Free in-store delivery
            .col-sm-6.col-md-4.d-none.d-sm-flex.justify-content-end
                // Language Dropdown
                .dropdown.border-right.px-3
                    a#langsDropdown.dropdown-toggle.topbar-link(href="#", data-toggle='dropdown', data-display='static', aria-haspopup='true', aria-expanded='false') English
                    .dropdown-menu.dropdown-menu-right(aria-labelledby='langsDropdown')
                        a.dropdown-item(href='#') German
                        a.dropdown-item(href='#') French

                // Currency Dropdown
                .dropdown.pl-3.ml-0
                    a#currencyDropdown.dropdown-toggle.topbar-link(href='#', data-toggle='dropdown', data-display='static', aria-haspopup='true', aria-expanded='false') USD
                    .dropdown-menu.dropdown-menu-right(aria-labelledby='currencyDropdown')
                        a.dropdown-item(href='#') EUR
                        a.dropdown-item(href='#')  GBP

// Top Bar End