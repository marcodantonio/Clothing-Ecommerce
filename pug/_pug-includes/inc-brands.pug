// Brands Slider
.swiper-container.brands-slider
    - var brands = [1,2,3,4,5,6,1,2,3,4]
    .swiper-wrapper.pb-5
        each val in brands
            // item
            .swiper-slide.h-auto.d-flex.align-items-center.justify-content-center
                img.img-fluid.w-6rem.opacity-7(src=`${path}img/brand/brand-${val}.svg`, alt=`Brand ${val}`)

    .swiper-pagination